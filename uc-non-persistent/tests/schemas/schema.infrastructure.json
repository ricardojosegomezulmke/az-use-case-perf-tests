{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://az-use-case-perf-tests.uc-non-persistent.com/infrastructure.json",
    "type": "object",
    "title": "An infrastructure",
    "required": [
        "cloud_provider",
        "config"
    ],
    "properties": {
        "cloud_provider": {
            "type": "string",
            "title": "The infrastructure cloud provider",
            "enum": [ "azure", "aws" ]
        },
        "config": {
            "type": "string",
            "title": "The infrastructure config",
            "examples": [
                "1-auto-standalone"
            ]
        }
    },
    "additionalProperties": false
}
