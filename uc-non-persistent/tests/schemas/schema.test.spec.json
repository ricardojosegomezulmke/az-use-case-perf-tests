{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://az-use-case-perf-tests.uc-non-persistent.com/test_spec.json",
    "type": "object",
    "title": "Solace PubSub+ Performance Test Specification",
    "description": "The root schema comprises the entire JSON document.",
    "required": [
        "test_spec"
    ],
    "definitions": {
        "run": {
          "type": "object",
          "required": [
            "name", "description"
          ],
          "properties": {
            "name": {
              "$ref": "file:./schemas/schema.id.json"
            },
            "description": {
              "type": "string"
            },
            "load": {
              "$ref": "file:./schemas/schema.load.test_spec.json"
            },
            "monitors": {
              "$ref": "file:./schemas/schema.monitors.test_spec.json"
            }
          },
          "additionalProperties": false
        }
    },
    "properties": {
        "test_spec": {
            "$id": "#/properties/test_spec",
            "type": "object",
            "title": "The Test Specification",
            "description": "The Test specification.",
            "required": [
                "name",
                "description",
                "use_case",
                "infrastructure_list",
                "run_specs"
            ],
            "properties": {
                "name": {
                    "$id": "#/properties/test_spec/properties/name",
                    "$ref": "file:./schemas/schema.id.json",
                    "title": "The test spec name."
                },
                "description": {
                    "$id": "#/properties/test_spec/properties/description",
                    "type": "string",
                    "title": "Test spec description"
                },
                "use_case": {
                    "$id": "#/properties/test_spec/properties/use_case",
                    "$ref": "file:./schemas/schema.use_case.json",
                    "title": "The use case"
                },
                "infrastructure_list": {
                    "$id": "#/properties/test_spec/properties/infrastructure_list",
                    "type": "array",
                    "title": "The list of infrastructures",
                    "items": {
                      "$ref": "file:./schemas/schema.infrastructure.json"
                    },
                    "minItems": 1
                },
                "run_specs": {
                    "$id": "#/properties/test_spec/properties/run_specs",
                    "type": "object",
                    "title": "The list of run specifications",
                    "required": [
                        "run_params",
                        "run_defaults",
                        "runs"
                    ],
                    "properties": {
                        "run_params": {
                            "$id": "#/properties/test_spec/properties/run_specs/properties/run_params",
                            "$ref": "file:./schemas/schema.run_params.json"
                        },
                        "run_defaults": {
                            "$id": "#/properties/test_spec/properties/run_specs/properties/run_defaults",
                            "type": "object",
                            "title": "Default Run Settings",
                            "properties": {
                                "load": {
                                  "$ref": "file:./schemas/schema.load.test_spec.json"
                                },
                                "monitors": {
                                  "$ref": "file:./schemas/schema.monitors.test_spec.json"
                                }
                            },
                            "additionalProperties": false
                        },
                        "runs": {
                          "$id": "#/properties/test_spec/properties/run_specs/properties/runs",
                          "type": "array",
                          "items": {
                            "$ref": "#/definitions/run"
                          },
                          "minItems": 1
                        }
                    }
                }
            }
        }
    }
}
