{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "http://localhost:8811/schema.run_spec.json",
    "type": "object",
    "title": "Solace PubSub+ Performance Test Run Specification",
    "description": "The root schema comprises the entire JSON document.",
    "required": [
        "general",
        "load",
        "monitors",
        "params"
    ],
    "definitions": {

      "load_publish": {
          "type": "object",
          "required": [
            "publishers", "client_connection_count", "msg_payload_size_bytes", "msg_rate_per_second"
          ],
          "additionalProperties": false,
          "properties": {
            "publishers": {
              "$ref": "common.json#/definitions/publishers"
            },
            "client_connection_count": {
              "$ref": "common.json#/definitions/number_as_str"
            },
            "msg_payload_size_bytes": {
              "$ref": "common.json#/definitions/number_as_str"
            },
            "msg_rate_per_second": {
              "$ref": "common.json#/definitions/number_as_str"
            }
          }
      },

      "load_subscribe_mandatory": {
          "type": "object",
          "required": [
            "consumer_distribution_strategy", "consumers"
          ],
          "additionalProperties": false,
          "properties": {
            "consumer_distribution_strategy": {
              "$ref": "common.json#/definitions/consumer_distribution_strategy"
            },
            "consumers": {
              "$ref": "common.json#/definitions/consumers"
            }
          }
      }

    },
    "properties": {
        "general": {
            "$id": "#/properties/general",
            "type": "object",
            "title": "The Run Spec General Settings",
            "required": [
                "description",
                "test_spec",
                "use_case"
            ],
            "properties": {
                "description": {
                    "$id": "#/properties/general/properties/description",
                    "type": "string"
                },
                "test_spec": {
                    "$id": "#/properties/general/properties/test_spec",
                    "type": "object",
                    "required": [
                      "descr",
                      "name"
                    ],
                    "properties": {
                        "name": {
                            "$id": "#/properties/general/properties/test_spec/properties/name",
                            "$ref": "file:./schemas/schema.id.json"
                        },
                        "descr": {
                            "$id": "#/properties/general/properties/test_spec/properties/descr",
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                },
                "use_case": {
                    "$id": "#/properties/general/properties/use_case",
                    "$ref": "file:./schemas/schema.use_case.json"
                }
            },
            "additionalProperties": false
        },
        "load": {
          "$id": "#/properties/load",
          "$ref": "file:./schemas/schema.load.run_spec.json"
        },
        "monitors": {
          "$id": "#/properties/monitors",
          "$ref": "file:./schemas/schema.monitors.run_spec.json"
        },
        "params": {
          "$id": "#/properties/params",
          "$ref": "file:./schemas/schema.run_params.json"
        }
    }
}
